#
# Mcabber
#

# Style
set log_win_height = 5
set roster_width = 27
#set log_win_on_top = 0
#set roster_win_on_right = 0
set roster_no_leading_space = 0

# Buddy name format
# - 0: (default) "<jid/resource>"
# - 1: "name <jid/resource>"
# - 2: "name/resource"
# - 3: "name"
set buddy_format = 2

# Display the status changes in the chat buffers
# 0: never  1: only connect/disconnect  2: all
set show_status_in_buffer = 0

# Display the message sender jid in the log window
set log_display_sender = 1

# Ignore self presence in roster window
set ignore_self_presence = 1

# Command line history lines
set cmdhistory_lines = 250

# Store history
set logging = 1
set load_logs = 1
set logging_dir = ~/.mcabber/logs/
set logging_ignore_status = 1

# Chatrooms logging
set log_muc_conf = 0

# Store unread messages
set statefile = ~/.mcabber/mcabber.state

# IQ settings
set iq_version_hide_os = 1
set iq_last_disable = 1
#set iq_hide_requests = 0

# OTR
set otr = 1
set otr_dir = ~/.mcabber/otr/
otrpolicy default always

# Named pipe
#set fifo_name = ~/.mcabber/mcabber.fifo
#set fifo_hide_commands = 0
#set fifo_ignore = 0

# Events
set events_command = ~/.mcabber/eventcmd
set events_ignore_active_window = 0
set eventcmd_use_nickname = 1

# Colors
set color_background   = black
set color_general      = cyan
set color_msgout       = yellow
set color_bgstatus     = blue
set color_status       = white
set color_roster       = green
set color_bgrostersel  = cyan
set color_rostersel    = blue
set color_rosterselmsg = red
set color_rosternewmsg = red

